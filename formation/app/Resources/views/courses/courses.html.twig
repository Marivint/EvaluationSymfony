{% extends 'courses.html.twig' %}

{% block body %}
    <div class="container">
        <h3> Liste des formations </h3>
        {% for value in app.flashes('notice') %}
            <p class="alert alert-success"> {{ value }}</p>
        {% endfor %}
        <a  href="{{ url('contact_form') }}" class="btn btn-success">Ajouter <span class="glyphicon glyphicon-plus"></span></a>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>id</th>
                <th>Nom</th>
            </tr>
            </thead>
            <tbody>
            {% for value in results %}
                <tr>
                    <td>{{value.id}}</td>
                    <td><a href="{{ url('formation_modules', { 'formation' : value.name }) }}">{{value.name}}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}