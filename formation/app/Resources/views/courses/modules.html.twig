{% extends 'courses.html.twig' %}

{% block body %}
    <div class="container">
        <h3> Liste des modules de la formation {{ formation }} </h3>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>id</th>
                <th>Nom</th>
                <th>Module(s)</th>
            </tr>
            </thead>
            <tbody>
            {% for value in results %}
                <tr>
                    <td>{{value.id}}</td>
                    <td>{{value.name}}</td>
                    <td>
                        {%  for module in value.modules %}
                            {{module.name}}
                        {% endfor %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}