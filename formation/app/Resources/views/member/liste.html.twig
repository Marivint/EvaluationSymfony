{% extends 'member.html.twig' %}

{% block body %}
    <div class="container">
        <h3> Controlleur MEMBRE </h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Email</th>
                    <th>Photo</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td>{{member.nom}}</td>
                        <td>{{member.prenom}}</td>
                        <td>{{member.email}}</td>
                        <td><img src="{{asset('IMG/'~member.photo)}}" width="50" height="50" alt=""></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}